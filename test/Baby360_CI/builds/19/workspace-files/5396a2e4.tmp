<?xml version="1.0" encoding="utf-8"?>


<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view_main"
    android:layout_height="@dimen/options_title_height"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    class="com.pinguo.edit.sdk.login.view.TitleView">

    <ImageView
        android:id="@+id/title_back_btn"
        android:src="@drawable/btn_back_selector"
        android:scaleType="center"
        android:layout_marginLeft="11dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/title_text_title"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/title_right_btn"
        android:layout_marginRight="15dp"
        android:textColor="@drawable/title_text_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="17sp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <!-- 当title右边是图片的时候可以用这个代替-->
    <ImageView
        android:id="@+id/title_right_img_btn"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</view>


