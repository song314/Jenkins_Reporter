    @Override
    public void onStartPreview() {
        super.onStartPreview();
        // 开启预览成功，可以处理传感器聚焦消息
        mFocusManager.setPreviewPause(false);

        SizeInfo previewSize = new SizeInfo(CameraSettingModel.instance()
                .getPreviewSize()
                .getHeight(), CameraSettingModel.instance().getPreviewSize().getWidth());
        SizeInfo screenSize = new SizeInfo(CameraModuleUtil.getDisplaySize().getWidth(),
                CameraModuleUtil.getDisplaySize().getHeight());
        mScaledSize = CameraModuleUtil.scaleSizeToBound(previewSize, screenSize);

        float topMenuHeight = getResources().getDimensionPixelSize(
                ResourceHelper.getIdByName(getActivity(),
                        "dimen", "composite_sdk_camera_top_menu_height"));

        // 修改底部menu的高度
        float bottomMenuHeight = CameraModuleUtil.getDisplaySize().getHeight()
                - mScaledSize.getWidth() - topMenuHeight;
        int bottomMinHeight = getResources().getDimensionPixelSize(
                ResourceHelper.getIdByName(getActivity(), "dimen", "composite_sdk_camera_bottom_height"));
        if (bottomMenuHeight > bottomMinHeight) {
            ViewGroup.LayoutParams bottomLp = mViewHolder.mBottomMenuView.getLayoutParams();
            bottomLp.height = (int) bottomMenuHeight;
            mViewHolder.mBottomMenuView.setLayoutParams(bottomLp);
        } else {
            float scaleRate = 1 - (bottomMinHeight - bottomMenuHeight)  / screenSize.getWidth();
            int newBoundWidth = Math.round(screenSize.getWidth() * scaleRate);
            int newBoundHeight = Math.round(screenSize.getHeight() * scaleRate);
            SizeInfo sizeInfo = new SizeInfo(newBoundWidth, newBoundHeight);
            mScaledSize = CameraModuleUtil.scaleSizeToBound(previewSize, sizeInfo);
        }

        // 设置touchView
        if (mScaledSize.getHeight() - mScaledSize.getWidth() >= topMenuHeight) {
            mViewHolder.mPreviewTouchView.setAllSize(screenSize, mScaledSize, topMenuHeight, topMenuHeight);
        } else {
            ViewGroup.MarginLayoutParams previewLp = (ViewGroup.MarginLayoutParams) mViewHolder.mPreviewView.getLayoutParams();
            previewLp.topMargin = (int) topMenuHeight;
            mViewHolder.mPreviewView.setLayoutParams(previewLp);
            mViewHolder.mPreviewTouchView.setAllSize(screenSize, mScaledSize, topMenuHeight, topMenuHeight);
        }

        // 设置foucusContainer
        float foucusContainerHeight = mScaledSize.getWidth() + 2 * topMenuHeight;
        ViewGroup.LayoutParams focusContainerLp = mViewHolder.mFocusContainer.getLayoutParams();
        focusContainerLp.height = (int) foucusContainerHeight;
        mViewHolder.mFocusContainer.setLayoutParams(focusContainerLp);

        CMLogger.i(TAG, "initSensorFocus mFocusManager= " + mFocusManager);
        if (mFocusManager != null) {
            mFocusManager.initializeFocusParameters(mScaledSize.getWidth(), mScaledSize.getHeight());
            mFocusManager.startFirstFocusAfterStartPreview();
            mFocusManager.resetSensorValue();
        }

        // 美图手机开启手电筒后拍照会被系统关闭手电筒 适配
        // 魅族M032设置白平衡参数什么的,需要在开启预览之后设置才会生效.
        // 比如用户在取景设置已经通过高级调整设置了白平衡，然后进入相册后
        // 再回到取景界面，如果不加这句话，即使在开启相机后重启设置了参数，
        // 也是没有作用的 bug 13080 . add by wql
        // 以后发现还有类似的手机有这个问题，请抽取所有机型到GAdpter里面去统一适配。
        if (((GAdapter.IS_HTC_G11_ALL || GAdapter.IS_MEITU_KISS) && CameraSettingModel.instance().isOpenFlashLight())
                || GAdapter.IS_MEIZU_M032) {
            CameraSettingModel.instance().updateParameters(CameraSettings.UPDATE_PARAM_PREFERENCE);
        }

        // usb大容量存储开关打开，给出用户提示
        UtilStorage storage = UtilStorage.getInstance();
        String path = CameraBusinessSettingModel.instance().getPictureSavePath();
        if (0 == storage.getAvailableStorage(path)) {
            Toast.makeText(getActivity(),
                    ResourceHelper.getIdByName(getActivity(),
                            "string", "composite_sdk_no_storage_to_take_picture"),
                    Toast.LENGTH_SHORT).show();
        }
    }

