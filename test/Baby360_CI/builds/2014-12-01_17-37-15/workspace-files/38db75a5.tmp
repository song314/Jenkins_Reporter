<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
            android:id="@+id/gl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            layout="@layout/composite_sdk_album_body"/>

    <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/composite_sdk_album_header_bar_height"
            android:background="@color/composite_sdk_album_main_menu_bg">

        <ImageButton
                android:id="@+id/top_bar_back"
                android:src="@drawable/composite_sdk_album_btn_back"
                android:layout_marginLeft="@dimen/composite_sdk_common_bar_icon_margin"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:layout_width="@dimen/composite_sdk_common_bar_icon_size"
                android:layout_height="@dimen/composite_sdk_common_bar_icon_size"/>

        <TextView
                android:id="@+id/top_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/composite_sdk_album_title"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>

        <ImageButton
                android:id="@+id/top_bar_camera"
                android:src="@drawable/composite_sdk_enter_camera"
                android:layout_marginRight="@dimen/composite_sdk_common_bar_icon_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:background="#00000000"
                android:layout_width="@dimen/composite_sdk_common_bar_icon_size"
                android:layout_height="@dimen/composite_sdk_common_bar_icon_size"/>
    </RelativeLayout>


</RelativeLayout>