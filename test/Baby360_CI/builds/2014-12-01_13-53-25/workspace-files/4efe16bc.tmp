<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout style="@style/OptionsItemClickable">

        <ImageView
            android:id="@+id/option_item_icon"
            style="@style/OptionsItemIcon"
            android:contentDescription="@string/empty_string" />

        <TextView
            android:id="@+id/option_item_title"
            android:layout_toRightOf="@+id/option_item_icon"
            style="@style/OptionsItemText"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/option_item_summary"
            android:layout_toLeftOf="@+id/option_item_new"
            android:layout_marginRight="6dp"
            android:singleLine="true"
            style="@style/OptionsItemSummaryTextStyle"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/option_item_new"
            android:layout_toLeftOf="@+id/option_item_more"
            android:visibility="gone"
            style="@style/OptionsItemIconMoreNew" />

        <com.pinguo.edit.sdk.option.view.RoundImageView
            android:id="@+id/option_item_new_custom"
            android:layout_toLeftOf="@+id/option_item_more"
            android:visibility="gone"
            style="@style/OptionsItemIconMoreNewTag" />

        <ImageView
            android:id="@+id/option_item_more"
            style="@style/OptionsItemIconMore" />
    </RelativeLayout>

    <ImageView style="@style/TranslucentStripsWhite" />
</RelativeLayout>
