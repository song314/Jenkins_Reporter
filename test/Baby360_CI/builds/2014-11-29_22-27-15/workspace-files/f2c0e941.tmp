<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/login_alert_dialog_bg"
    android:layout_width="@dimen/login_alert_dialog_width"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_tv"
        android:text="aaa"
        android:layout_marginTop="@dimen/select_dialog_title_top"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/login_alert_dialog_mes_text_size"
        android:layout_width="wrap_content"
        android:layout_gravity="center" />

    <View
        android:layout_width="@dimen/login_alert_dialog_line_width"
        android:layout_height="1dp"
        android:background="#ffffffff"
        android:layout_marginLeft="@dimen/login_alert_dialog_inner_padding"
        android:layout_marginRight="@dimen/login_alert_dialog_inner_padding"
        android:layout_marginTop="@dimen/select_dialog_single_line_top"
        android:gravity="center" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" />
</LinearLayout>