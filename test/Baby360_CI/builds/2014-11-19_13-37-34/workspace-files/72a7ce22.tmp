<!-- This layout is shared by phone and small size tablet. -->
<com.pinguo.edit.sdk.camera.ui.CameraTopMenuView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/camera_top_menu"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <RelativeLayout
            android:id="@+id/lay_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/composite_sdk_camera_top_menu_height"
            android:background="@color/composite_sdk_camera_main_menu_bg">

        <ImageButton
            android:id="@+id/close_btn"
            android:background="@drawable/composite_sdk_camera_quit"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/composite_sdk_common_bar_icon_size"
            android:layout_height="@dimen/composite_sdk_common_bar_icon_size"/>

        <ImageButton
            android:id="@+id/btn_flash_mode"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:layout_width="@dimen/composite_sdk_common_bar_icon_size"
            android:src="@drawable/composite_sdk_camera_top_bar_flash_off_normal"/>

        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:layout_width="@dimen/composite_sdk_common_bar_icon_size"
            android:src="@drawable/composite_sdk_camera_top_bar_sw_camera"/>
    </RelativeLayout>
</com.pinguo.edit.sdk.camera.ui.CameraTopMenuView>