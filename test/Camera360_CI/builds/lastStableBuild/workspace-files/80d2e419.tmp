<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_options_save_path">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/options_bg">

        <include
            android:id="@+id/advancePicturePathTitle"
            layout="@layout/composite_sdk_login_head_view" />

        <TextView
            android:id="@+id/tv_options_save_path"
            android:layout_width="fill_parent"
            android:layout_height="26.7dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_save_path_select"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:text="@string/pic_save_path_custom_ok" />

            <FrameLayout
                android:id="@+id/lay_save_path_list_body"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/btn_save_path_select"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"></FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>