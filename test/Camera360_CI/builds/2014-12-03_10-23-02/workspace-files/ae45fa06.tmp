<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/umeng_fb_reply_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/umeng_fb_reply_date_default"
        android:layout_marginTop="10dp"
        android:textColor="#abb2ba"
        android:visibility="gone"
        android:textSize="12sp" />

    <com.pinguo.Camera360Lib.ui.imageloader.ImageLoaderView
        android:id="@+id/avatar_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/umeng_fb_reply_date"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar_img"
        android:layout_toLeftOf="@id/avatar_img"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textColor="#999fa5"
        android:textSize="10sp"></TextView>

    <TextView
        android:id="@+id/umeng_fb_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/umeng_fb_reply_date"
        android:layout_toLeftOf="@id/avatar_img"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_chatbox_right"
        android:maxWidth="200dp"
        android:minWidth="30dp"
        android:text="@string/umeng_fb_reply_content_default"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="15sp" />
</RelativeLayout>