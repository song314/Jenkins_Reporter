<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom"
    android:id="@+id/root">

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:textColor="#4c4c4c"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/composite_sdk_quit_bg"
        android:text="@string/composite_sdk_quit"
        android:id="@+id/quit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/quit"
        android:layout_gravity="bottom"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/composite_sdk_save_composite_effect_bg"
        android:id="@+id/save"
        android:text="@string/composite_sdk_save_composite_effect" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/save"
        android:layout_gravity="bottom"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/composite_sdk_send_photo_bg"
        android:text="@string/composite_sdk_send_photo"
        android:id="@+id/send_photo" />

    <include
        layout="@layout/progress_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_layout" />

</RelativeLayout>

