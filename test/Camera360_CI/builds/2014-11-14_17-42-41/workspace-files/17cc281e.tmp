public class StringUtils {

    public static String uncapitalize(String str) {
        int strLen;
        if (str == null || (strLen = str.length()) == 0) {
            return str;
        }

        StringBuffer sb = new StringBuffer();
        sb.append(Character.toLowerCase(str.charAt(0)))
                .append(str.substring(1));
        return sb.toString();
    }
}
